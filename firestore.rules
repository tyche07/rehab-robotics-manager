rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // For this demo, we will allow reads and writes to all documents
    // for any authenticated user. In a real application, you should
    // implement more granular security rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

